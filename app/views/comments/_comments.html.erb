<% if commentable.comments.empty? %>
  <p><%= t('comments.empty') %></p>
<% else %>
  <table>
    <thead>
      <tr>
        <th>name</th>
        <th>Content</th>
        <th>Date</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% commentable.comments.each do |comment| %>
      <tr>
        <td><%= User.find(comment.user_id).name == "" ? User.find(comment.user_id).email : User.find(comment.user_id).name %></td>
        <td><%= comment.content %></td>
        <td><%= comment.created_at %></td>
        <% if current_user == comment.user %>
          <td><%= link_to 'Edit', edit_polymorphic_url([commentable, comment]) %></td>
          <td><%= link_to 'Destroy', polymorphic_path([commentable, comment]), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>

<% end %>
