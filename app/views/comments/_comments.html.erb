<% if comments.empty? %>
  <p><%= t('comments.empty') %></p>
<% else %>
  <table>
    <thead>
      <tr>
        <th>name</th>
        <th>Content</th>
        <th>Date</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% comments.each do |c| %>
      <tr>
        <td></td>
        <td><%= c.content %></td>
        <td><%= c.created_at %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

<% end %>
