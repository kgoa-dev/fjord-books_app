<% if comments.empty? %>
  <p><%= t('comments.empty') %></p>
<% else %>
  <table>
    <thead>
      <tr>
        <th>name</th>
        <th>Content</th>
        <th>Date</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% comments.each do |comment| %>
      <tr>
        <td><%= User.find(comment.user_id).name == "" ? User.find(comment.user_id).email : User.find(comment.user_id).name %></td>
        <td><%= comment.content %></td>
        <td><%= comment.created_at %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

<% end %>
