<h2><%= Comment.model_name.human %></h2>
<% if commentable.comments.empty? %>
  <p><%= t('comments.empty') %></p>
<% else %>
  <table>
    <thead>
      <tr>
        <th><%= User.human_attribute_name(:name) %></th>
        <th><%= Comment.human_attribute_name(:content) %></th>
        <th><%= Comment.human_attribute_name(:update_at) %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% commentable.comments.each do |comment| %>
      <tr>
        <td><%= User.find(comment.user_id).name == "" ? User.find(comment.user_id).email : User.find(comment.user_id).name %></td>
        <td><%= comment.content %></td>
        <td><%= comment.created_at %></td>
        <% if current_user == comment.user %>
          <td><%= link_to t('views.common.edit'), edit_polymorphic_url([commentable, comment]) %></td>
          <td><%= link_to t('views.common.destroy'), polymorphic_path([commentable, comment]), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>

<% end %>
