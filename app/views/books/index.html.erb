<p id="notice"><%= notice %></p>

<h1><%= I18n.t 'headline.books' %></h1>

<table>
  <thead>
    <tr>
      <th><%=I18n.t 'books.title' %></th>
      <th><%=I18n.t 'books.memo' %></th>
      <th><%=I18n.t 'books.author' %></th>
      <th><%=I18n.t 'books.picture' %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= book.picture %></td>
        <td><%= link_to "#{t('control.show')}", book %></td>
        <td><%= link_to "#{t('control.edit')}", edit_book_path(book) %></td>
        <td><%= link_to "#{t('control.destroy')}", book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "#{t('control.newbook')}", new_book_path %>
